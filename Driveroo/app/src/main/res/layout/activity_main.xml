<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    android:weightSum="2.8"
    tools:context="com.blackwood3.driveroo.MainActivity">

    <Chronometer
        android:id="@+id/chronometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="46dp"
        android:textColor="@color/colorDark"
        android:textSize="40sp"
        app:layout_constraintHorizontal_bias="0.217"
        app:layout_constraintLeft_toRightOf="@+id/timeTv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/disTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="23dp"
        android:padding="0dp"
        android:paddingBottom="0dp"
        android:paddingEnd="0dp"
        android:paddingRight="0dp"
        android:textAppearance="@android:style/TextAppearance.Material"
        android:textSize="40sp"
        app:layout_constraintHorizontal_bias="0.242"
        app:layout_constraintLeft_toRightOf="@+id/imageView3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chronometer"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />


    <ImageView
        android:id="@+id/startBtn2"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginLeft="83dp"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/disTv"
        app:srcCompat="@drawable/startfinal2_meitu_4"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toTopOf="@+id/map" />

    <ImageView
        android:id="@+id/endBtn"
        android:layout_width="55dp"
        android:layout_height="55dp"
        app:srcCompat="@drawable/stopfinal2_meitu_5"
        tools:layout_conversion_absoluteX="270dp"
        tools:layout_conversion_absoluteY="208dp"
        tools:layout_conversion_absoluteWidth="55dp"
        tools:layout_conversion_absoluteHeight="55dp"
        android:layout_marginRight="82dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/disTv"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toTopOf="@+id/map" />

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="375dp"
        android:layout_height="404dp"
        tools:context="com.blackwood3.driveroo.MapsActivity"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/disTv"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_conversion_absoluteX="18dp"
        tools:layout_conversion_absoluteY="279dp"
        tools:layout_conversion_absoluteWidth="375dp"
        tools:layout_conversion_absoluteHeight="404dp"
        android:layout_marginBottom="65dp"
        android:layout_marginTop="8dp" />

    <ImageView
        android:id="@+id/timeTv"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginLeft="47dp"
        android:layout_marginTop="43dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/watch" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="55dp"
        android:layout_height="55dp"
        app:srcCompat="@drawable/distance"
        android:layout_marginLeft="45dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/timeTv" />

    <EditText
        android:id="@+id/level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="163dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        android:visibility="gone"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>
