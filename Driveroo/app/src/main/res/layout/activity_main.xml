<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/road1_meitu_2_meitu_3"
    android:orientation="vertical"
    android:weightSum="2.8"
    tools:context="com.blackwood3.driveroo.MainActivity">

    <TextView
        android:id="@+id/testString"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:text="TextView"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/disTv" />

    <TextView
        android:id="@+id/timeTv"
        android:layout_width="390dp"
        android:layout_height="60dp"
        android:fontFamily="monospace"
        android:text="Time:"
        android:textAlignment="viewStart"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"
        app:layout_constraintHorizontal_bias="0.6" />

    <TextView
        android:id="@+id/disTv"
        android:layout_width="390dp"
        android:layout_height="60dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:fontFamily="monospace"
        android:padding="0dp"
        android:paddingBottom="0dp"
        android:paddingEnd="0dp"
        android:paddingRight="0dp"
        android:text="Distance:"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/timeTv" />


    <ImageView
        android:id="@+id/startBtn2"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/disTv"
        app:srcCompat="@drawable/startfinal2_meitu_4" />

    <ImageView
        android:id="@+id/endBtn"
        android:layout_width="55dp"
        android:layout_height="55dp"
        app:srcCompat="@drawable/stopfinal2_meitu_5"
        tools:layout_conversion_absoluteX="270dp"
        tools:layout_conversion_absoluteY="208dp"
        tools:layout_conversion_absoluteWidth="55dp"
        tools:layout_conversion_absoluteHeight="55dp"
        android:layout_marginRight="80dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/disTv" />

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="375dp"
        android:layout_height="404dp"
        tools:context="com.blackwood3.driveroo.MapsActivity"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/disTv"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_conversion_absoluteX="18dp"
        tools:layout_conversion_absoluteY="279dp"
        tools:layout_conversion_absoluteWidth="375dp"
        tools:layout_conversion_absoluteHeight="404dp"
        android:layout_marginBottom="69dp"
        android:layout_marginTop="8dp" />


</android.support.constraint.ConstraintLayout>
